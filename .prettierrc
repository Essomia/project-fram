{
    "printWidth": 120,
    "tabWidth": 4,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": true,
    "proseWrap": "preserve",
    "semi": true,
    "quoteProps": "as-needed",
    "arrowParens": "avoid",
    "trailingComma": "all",
    "jsxSingleQuote": true,
    "jsxBracketSameLine": false,
    "htmlWhitespaceSensitivity": "css",
    "vueIndentScriptAndStyle": true,
    "insertPragma": false,
    "requirePragma": false,

    "overrides": [
        {
            "files": ["*.yaml", "*.yml", "*.json"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": [".editorconfig", "*.md"],
            "options": {
                "tabWidth": 0
            }
        }
    ]
}

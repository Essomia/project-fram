{
  "name": "project-fram",
  "version": "0.1.0",
  "description": "A modern JavaScript boilerplate for Node.js and React projects",
  "main": "src/index.js",
  "type": "module",
  "author": "essomia",
  "license": "MIT",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.js",
    "build": "rm -rf dist && mkdir -p dist && esbuild src/index.js --bundle --minify --platform=node --outdir=dist --target=node16",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky install",
    "postinstall": "chmod +x .husky/pre-commit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/essomia/project-fram.git"
  },
  "bugs": {
    "url": "https://github.com/essomia/project-fram/issues"
  },
  "homepage": "https://github.com/essomia/project-fram#readme",
  "dependencies": {
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^22.15.19",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "esbuild": "^0.25.4",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.4.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.0.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.0.3",
    "ts-jest": "^29.3.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run lint:fix",
      "npm run format"
    ],
    "*.{json,md}": [
      "npm run format"
    ]
  }
}
